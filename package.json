{
  "name": "@credential-handler/vc-examples",
  "version": "6.13.1-0",
  "description": "Verifiable Credentials for the CHAPI Issuer Playground",
  "type": "module",
  "main": "./lib/index.js",
  "scripts": {
    "check": "node test/safe-mode-check.js",
    "extract": "node test/safe-mode-check.js extract",
    "build": "eleventy",
    "serve": "wrangler pages dev _site/",
    "watch": "eleventy --watch",
    "test": "npm run lint && npm run test-node",
    "test-node": "cross-env NODE_ENV=test mocha --preserve-symlinks -t 10000 test/*.spec.js",
    "lint": "eslint ."
  },
  "files": [
    "contexts/**/*.{json, html}",
    "credentials/**/*.{jpg,json,png,svg}",
    "lib/*.js"
  ],
  "devDependencies": {
    "@11ty/eleventy-fetch": "^5.1.0",
    "@digitalbazaar/eslint-config": "^7.0.1",
    "chai": "^5.3.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.39.2",
    "glob": "^11.0.3",
    "jsonld": "^8.3.3",
    "jsonld-document-loader": "^2.3.0",
    "mocha": "^11.7.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/credential-handler/vc-examples.git"
  },
  "engines": {
    "node": ">=22"
  },
  "author": {
    "name": "Digital Bazaar, Inc.",
    "email": "support@digitalbazaar.com",
    "url": "https://digitalbazaar.com/"
  },
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/credential-handler/vc-examples/issues"
  },
  "homepage": "https://github.com/credential-handler/vc-examples#readme",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "canonify": "^2.1.1",
    "file-type": "^21.0.0",
    "multiformats": "^13.4.0",
    "wrangler": "^4.31.0"
  }
}
